<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-center">Salas de Chat</h2>
            <ul class="list-group">
                @foreach (var room in LiveChat1.Controllers.ChatController.Rooms)
                {
                    <li class="list-group-item">
                        <a class="btn btn-info" href="~/Chat/Room?room=@room.Key">@room.Value</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
